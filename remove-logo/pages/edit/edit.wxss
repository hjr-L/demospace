.edit{
  text-align: center;
}
.avatar{
  width: 160rpx !important;
  height: 160rpx;
  border-radius: 50%;
  margin: 60rpx auto;
  background-color: #fff;
  position: relative;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.16);
  overflow: visible;
  padding: 0 !important;
  text-align: center;
}
.avatar-img{
  border-radius: 50%;
}

.avatar .icon{
  position: absolute;
  font-size: 52rpx;
  color: var(--sub-color);
  bottom: -10rpx;
  right: -26rpx;
  z-index: 9;
}
.form{
  width: 100%;
  padding: 0 64rpx;
  box-sizing: border-box;
}
.form-item{
  padding: 20rpx 0;
  display: flex;
  column-gap: 10rpx;
  align-items: center;
  height: 120rpx;
}
.form-item-label{
  font-size: 38rpx;
  text-align: left;
}
.form-item-input{
  height: 80rpx;
  /* border: 2rpx solid rgb(228, 227, 227); */
}
.btn{
  margin: 40rpx 64rpx 0;
  height: 80rpx;
  line-height: 80rpx;
  width: calc(100vw - 128rpx);
  background-color: var(--primary-color);
  color: #fff
}