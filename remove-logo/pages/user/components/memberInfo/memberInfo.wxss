.member-info{
    margin: 10rpx 64rpx;
    height: 250rpx;
    padding: 20rpx;
    column-gap: 20rpx;
    display: flex;
    align-items: center;
    border-radius: 8rpx;
    backdrop-filter: blur(20rpx);
    border: 2rpx solid #F7F8FC;
}
.member-info .avatar{
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    background: #d3d2d2;
}


.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #aaa;
    width: 80%;
  }
  
  .userinfo-avatar {
    overflow: hidden;
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
  }
  
  .usermotto {
    margin-top: 200px;
  }
  
  .avatar-wrapper {
    padding: 0;
    width: 56px !important;
    border-radius: 8px;
    margin-top: 40px;
    margin-bottom: 40px;
  }
  
  .avatar {
    display: block;
    width: 56px;
    height: 56px;
  }
  
  .nickname-wrapper {
    display: flex;
    width: 100%;
    padding: 16px;
    box-sizing: border-box;
    border-top: .5px solid rgba(0, 0, 0, 0.1);
    border-bottom: .5px solid rgba(0, 0, 0, 0.1);
    color: black;
  }
  
  .nickname-label {
    width: 105px;
  }
  
  .nickname-input {
    flex: 1;
  }