.member-info{
    margin: 10rpx 32rpx;
    height: 200rpx;
    /* padding: 20rpx; */
    column-gap: 20rpx;
    display: flex;
    align-items: center;
    border-radius: 8rpx;
    backdrop-filter: blur(20rpx);
    border: 2rpx solid var(--border-color);
}
.member-info .avatar{
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    font-size: 32rpx;
    text-align: center;
    margin-right: 20rpx;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.16);
    line-height: 140rpx;
    /* background: #d3d2d2; */
}
.member-info .avatar image{
  width: 100%;
  border-radius: 50%;
}


.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: var(--sub-color);
    width: 80%;
  }
  
  .userinfo-avatar {
    overflow: hidden;
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
  }
  
  .usermotto {
    margin-top: 200px;
  }
  
  .avatar-wrapper {
    padding: 0;
    width: 56px !important;
    border-radius: 8px;
    margin-top: 40px;
    margin-bottom: 40px;
  }
  
  .avatar {
    display: block;
    width: 56px;
    height: 56px;
  }
  
  .nickname-wrapper {
    display: flex;
    width: 100%;
    padding: 16px;
    box-sizing: border-box;
    border-top: .5px solid rgba(0, 0, 0, 0.1);
    border-bottom: .5px solid rgba(0, 0, 0, 0.1);
    color: var(--primary-color);
  }
  
  .nickname-label {
    width: 105px;
  }
  
  .nickname-input {
    flex: 1;
  }
  .sub{
    margin-top: 12rpx;
    color: var(--sub-color);
  }
  .grade{
    padding: 10rpx;
    /* background-color: rgb(136, 219, 184); */
    color: var(--sub-color);
  }

  .info text{
    color: var(--primary-color);
  }